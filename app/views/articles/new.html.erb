<h1>Fale sobre o livro:</h1>

<%= form_for :article, url: articles_path do |f| %>
    <p>
      <%= f.label :Título %><br>
      <%= f.text_field :title %>
    </p>
   
    <p>
      <%= f.label :Autor %><br>
      <%= f.text_area :text %>
    </p>


    <p>
      <%= f.label :Publicação %><br>
      <%= f.text_area :pub %>
    </p>
   
    <p>
      <%= f.submit %>
    </p>
  <% end %>

  <%= link_to 'Voltar', articles_path %>